var true_failure = false;
var create_email = false;
var final_transcript = '';
var recognizing = false;
var restart_recognition = false;
var ignore_onend;
var start_timestamp;
if (!('webkitSpeechRecognition' in window)) {
  upgrade();
} else {
  start_button.style.display = 'inline-block';
  var recognition = new webkitSpeechRecognition();
  recognition.continuous = true;
  recognition.interimResults = true;
  recognition.lang = window.language_code;

  recognition.onstart = function() {
    recognizing = true;
    showInfo('info_speak_now');
    tart_img.src = '//www.google.com/intl/en/chrome/assets/common/images/content/mic-animate.gif';
  };

  recognition.onerror = function(event) {
    console.log("onerror hit!");
    console.log(event);
    true_failure = true;

    if (event.error == 'network') {
      console.log("network error encountered; requesting restart!!");
      restart_recognition = true;
    }

    if (event.error == 'no-speech') {
      start_img.src = '//www.google.com/intl/en/chrome/assets/common/images/content/mic.gif';
      showInfo('info_no_speech');
      restart_recognition = true;
    }
