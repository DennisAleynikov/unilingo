      start_img.src = '//www.google.com/intl/en/chrome/assets/common/images/content/mic.gif';
      showInfo('info_no_microphone');
      ignore_onend = true;
    }
    if (event.error == 'not-allowed') {
      if (event.timeStamp - start_timestamp < 100) {
        showInfo('info_blocked');
      } else {
        showInfo('info_denied');
      }
      ignore_onend = true;
    }
  };


  recognition.onend = function() {
      console.log("*** END EVENT ***");
    recognizing = false;

    if (ignore_onend) {
      return;
    }
    if (!true_failure) {
        console.log("*** !true_failure ***");
        recognition.start();
    } else {
        true_failure = false;
    }

    if (restart_recognition) {
      console.log("inside onend, restart_recognition = true");
      restart_recognition = false;
      setTimeout(function() { recognition.start(); console.log("started recognition again"); }, 3000);
      console.log("recognition restarted");
    }

    start_img.src = '//www.google.com/intl/en/chrome/assets/common/images/content/mic.gif';
    if (!final_transcript) {
      showInfo('info_start');
      return;
    }
    showInfo('');
    if (window.getSelection) {
      window.getSelection().removeAllRanges();
      var range = document.createRange();
      range.selectNode(document.getElementById('final_span'));
      window.getSelection().addRange(range);
    }
    if (create_email) {
